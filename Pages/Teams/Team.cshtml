@page "{id}"
@model Teams.TeamModel
@{
    ViewData["Title"] = $"NFL Team - {Model.Team.Name}";
    var id = Model.Team.TeamId;
}


<div class="jumbotron p-2">
    <h1 class="display-4">
        <img src="/image/nfl/logo/@(id).png">
        @Model.Team.Location
        @Model.Team.Name
    </h1>
</div>

<div class="d-flex justify-content-between p-3">
    <div>
        <div>@Model.Team.Division.ConferenceId - @Model.Team.DivisionId</div>
        <div>Record: @Model.Team.Win-@Model.Team.Loss-@Model.Team.Tie</div>
        <hr />
        <div>@Model.Team.Stadium</div>
        <div>Capacity: @Model.Team.Capacity</div>
        <hr />
        <div>@Model.Team.Address</div>
        <div>@Model.Team.City, @Model.Team.State @Model.Team.Zip</div>
        <img class="pt-2" src="/image/nfl/stadium/@(id).jpg" alt="@Model.Team.Stadium" />
    </div>
    <img src="/image/nfl/seating/@(id).png" alt="@Model.Team.Stadium Seating Chart" />
</div>

<section class="grid">
    <div class="d-flex bg-primary text-white">
        <div class="p-1" style="flex: 0 0 10%">Number</div>
        <div class="p-1" style="flex: 0 0 25%">Name</div>
        <div class="p-1" style="flex: 0 0 10%">Position</div>
        <div class="p-1" style="flex: 0 0 20%">Experience</div>
        <div class="p-1" style="flex: 0 0 25%">College</div>
        <div class="p-1" style="flex: 0 0 10%">Depth</div>
    </div>
    @foreach(var Player in Model.Team.Players)
    {
        <a class="@(Player.Depth == 1 ? "d-flex p-1 starter" : "d-flex p-1")" asp-page="/Players/Player" asp-route-id="@Player.PlayerId">
            <div style="flex: 0 0 10%">@Player.Number</div>
            <div style="flex: 0 0 25%">@Player.Name</div>
            <div style="flex: 0 0 10%">@Player.Position</div>
            <div style="flex: 0 0 20%">@Player.Experience</div>
            <div style="flex: 0 0 25%">@Player.College</div>
            <div style="flex: 0 0 10%">@Player.Depth</div>
        </a>
    }
</section>