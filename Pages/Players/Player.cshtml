@page "{id}"
@model Players.PlayerModel
@{
    ViewData["Title"] = $"NFL Player - {Model.Player.Name}";
}
<div class="jumbotron p-2">
    <h1 class="display-4">
        <img src="/image/nfl/logo/@(Model.Player.TeamId).png">
        @Model.Player.Number
        @Model.Player.Name
    </h1>
</div>

<div class="justify-content-between p-3">
    <div>@Model.Player.Position</div>
    <hr />
    <div>Rating: @Model.Player.Rating</div>
    <div>Rank: @Model.Player.Rank</div>
    <div>Depth: @Model.Player.Depth</div>
    <hr />
    <div>Experience: @Model.Player.Experience</div>
    <div>College: @Model.Player.College</div>
    <div>Draft: @Model.Player.DraftYear - @Model.Player.DraftRound - @Model.Player.DraftPick</div>
    <hr />
    <div>Height: @Model.Player.Height</div>
    <div>Weight: @Model.Player.Weight</div>
    <div>Age: @Model.Player.Age</div>
    <div>Birthday: @Model.Player.BirthDate</div>
</div>